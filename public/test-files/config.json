{
  "app": {
    "name": "YukiFiles",
    "version": "2.1.0",
    "description": "Modern file sharing and management platform",
    "author": "YukiFiles Team",
    "license": "MIT"
  },
  "server": {
    "port": 3000,
    "host": "localhost",
    "environment": "development",
    "cors": {
      "origin": ["http://localhost:3000", "https://yukifiles.com"],
      "credentials": true
    }
  },
  "database": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "name": "yukifiles_db",
    "user": "yukifiles_user",
    "password": "secure_password_here",
    "ssl": true,
    "pool": {
      "min": 2,
      "max": 10,
      "idleTimeoutMillis": 30000
    }
  },
  "storage": {
    "provider": "supabase",
    "bucket": "yukifiles-storage",
    "region": "us-east-1",
    "maxFileSize": 2147483648,
    "allowedTypes": [
      "text/plain",
      "text/markdown",
      "application/json",
      "application/javascript",
      "text/css",
      "text/html",
      "application/x-python",
      "image/jpeg",
      "image/png",
      "image/gif",
      "application/pdf"
    ]
  },
  "security": {
    "jwt": {
      "secret": "your-super-secret-jwt-key",
      "expiresIn": "7d",
      "refreshExpiresIn": "30d"
    },
    "bcrypt": {
      "rounds": 12
    },
    "rateLimit": {
      "windowMs": 15 * 60 * 1000,
      "max": 100
    }
  },
  "features": {
    "fileEditor": {
      "enabled": true,
      "maxFileSize": 10485760,
      "supportedTypes": [".txt", ".md", ".js", ".py", ".css", ".html", ".json", ".yml", ".yaml"]
    },
    "fileSharing": {
      "enabled": true,
      "defaultExpiry": 7,
      "maxExpiry": 365,
      "passwordProtection": true
    },
    "collaboration": {
      "enabled": true,
      "realTimeEditing": true,
      "comments": true,
      "versionControl": true
    },
    "analytics": {
      "enabled": true,
      "trackDownloads": true,
      "trackViews": true,
      "trackShares": true
    }
  },
  "email": {
    "provider": "sendgrid",
    "apiKey": "your-sendgrid-api-key",
    "from": "noreply@yukifiles.com",
    "templates": {
      "welcome": "d-welcome-template-id",
      "verification": "d-verification-template-id",
      "passwordReset": "d-password-reset-template-id"
    }
  },
  "payment": {
    "stripe": {
      "secretKey": "sk_test_your-stripe-secret-key",
      "publishableKey": "pk_test_your-stripe-publishable-key",
      "webhookSecret": "whsec_your-webhook-secret"
    },
    "paypal": {
      "clientId": "your-paypal-client-id",
      "clientSecret": "your-paypal-client-secret",
      "mode": "sandbox"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "transports": ["console", "file"],
    "file": {
      "filename": "logs/yukifiles.log",
      "maxSize": "10m",
      "maxFiles": "5"
    }
  },
  "monitoring": {
    "enabled": true,
    "providers": {
      "sentry": {
        "dsn": "your-sentry-dsn",
        "environment": "development"
      },
      "newrelic": {
        "licenseKey": "your-newrelic-license-key",
        "appName": "YukiFiles"
      }
    }
  },
  "cache": {
    "redis": {
      "host": "localhost",
      "port": 6379,
      "password": null,
      "db": 0
    }
  },
  "queue": {
    "provider": "bull",
    "redis": {
      "host": "localhost",
      "port": 6379,
      "password": null,
      "db": 1
    },
    "queues": {
      "email": {
        "concurrency": 5
      },
      "fileProcessing": {
        "concurrency": 3
      }
    }
  }
}